{
  "name": "richardtmiles/carbonphp",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "Sockets",
    "Carbon",
    "Pipes",
    "IO"
  ],
  "homepage": "https://github.com/richardtmiles/carbonphp",
  "description": "Edit the DOM in PHP. A PHP 7+ tool kit designed for SEO optimization.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.1",
    "mustache/mustache": "^2.13.0",
    "psr/log": "^1.0",
    "matthiasmullie/minify": "^1.3",
    "patchwork/jsqueeze": "^2.0",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit-selenium": "^4.1"
  },
  "authors": [
    {
      "name": "Richard Miles",
      "email": "Richard@Miles.systems",
      "homepage": "http://www.CarbonPHP.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "CarbonPHP\\": "",
      "CarbonPHP\\Tables\\": "tables/",
      "CarbonPHP\\Error\\": "error/",
      "CarbonPHP\\Helpers\\": "helpers/",
      "CarbonPHP\\Interfaces\\": "interfaces/",
      "CarbonPHP\\Programs\\": "programs/",
      "CarbonPHP\\Controller\\": "controller/",
      "CarbonPHP\\Model\\": "model/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php index.php minify",
      "cd view/react/material-dashboard-react-c6 && npm install && npm run build"
    ],
    "test": [
      "php index.php setup --mysql_native_password",
      "php index.php setup --rebuild",
      "php index.php minify",
      "php index.php rest -json -logClasses",
      "./vendor/bin/phpunit"
    ]
  }
}
